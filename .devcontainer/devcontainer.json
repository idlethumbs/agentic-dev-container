{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--env-file", "${localWorkspaceFolder}/.devcontainer/.env"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
  "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",

  "source=claude-config,target=/home/node/.claude,type=volume",
  "source=claude-sneakpeek,target=/home/node/.claude-sneakpeek,type=volume",

  "source=${env:HOME}/.config/gcloud,target=/home/node/.config/gcloud,type=bind",
  "source=${localEnv:HOME}/.zshrc,target=/home/node/.zshrc-host,type=bind,readonly"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "CLAUDE_SP_CONFIG_DIR": "/home/node/.claude-sneakpeek"
  },
  "initializeCommand": "touch .devcontainer/.env",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "bash -lc 'sudo /usr/local/bin/init-firewall.sh || true; /usr/local/bin/start-sql-proxy.sh'",
  "waitFor": "postStartCommand"
}
